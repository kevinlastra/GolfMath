Terrain():nodes(NULL),longueur(0),largeur(0),Spos(NULL);
Terrain(const Node** ns, int lo, int la, const Vector &v):nodes(ns), longueur(lo), largeur(la), Spos(v){}
Terrain(const Terrain &t):nodes(t.nodes), longueur(t.longueur), largeur(t.largeur), Spos(t.Spos){}
~Terrain()
{
  for(int i = 0;i < longueur;i++)
  {
    delete []nodes[i];
  }
  delete []nodes;
}
void operator=(const Terrain &t)
{
  nodes = t.nodes;
  longueur = t.longueur;
  largeur = t.largeur;
  Spos = t.Spos;
}

Node** getNodes(){ return nodes;}
int getLon(){ return longueur;}
int getLar(){ return largeur;}
Vector getStartPos(){ return Spos;}

void setNode(const Node** n){ nodes = n;}
void setLon(int l){ longueur = l;}
void setLar(int l){ largeur = l;}
void setStartPos(const Vector &v){ Spos = v;}

Node getNode(const Vector &v)
{
  return nodes[v.y][v.x];
}
